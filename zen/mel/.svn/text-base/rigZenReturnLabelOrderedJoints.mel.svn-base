global proc string[] rigZenReturnLabelOrderedJoints(string $root)
{
	string	$joints[]=stringArrayCatenate({$root},`listRelatives -path -ad -type "joint" $root`);
	string	$returnVal[];
	int	$type;
	
		for($j in $joints)
		{
			$type=`getAttr ($j+".type")`;
			
			if(size($returnVal[$type]))
				$returnVal[$type]=$returnVal[$type]+","+$j;
			else
				$returnVal[$type]=$j;
		}
		
	return	$returnVal;
}

